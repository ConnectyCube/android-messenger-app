<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/splash_screen_bg">

    <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:indeterminate="false"
            android:max="100"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:visibility="visible" />

    <ImageView
            android:id="@+id/avatar_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_avatar_placeholder_group"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2"
            tools:ignore="ContentDescription" />

    <ImageView
            android:id="@+id/edit_avatar_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?actionBarItemBackground"
            android:src="@drawable/btn_edit_photo"
            app:layout_constraintBottom_toBottomOf="@id/avatar_img"
            app:layout_constraintEnd_toEndOf="@id/avatar_img"
            tools:ignore="ContentDescription" />

    <EditText
            android:id="@+id/chat_dialog_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:hint="@string/group_name"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textColor="@color/dark_grey"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatar_img"
            tools:text="Group name" />

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/edit_group_name_btn"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="32dp"
            android:background="?actionBarItemBackground"
            android:src="@drawable/ic_edit"
            android:tint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/chat_dialog_name_txt"
            app:layout_constraintStart_toEndOf="@+id/chat_dialog_name_txt"
            app:layout_constraintTop_toTopOf="@+id/chat_dialog_name_txt"
            tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>